<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.lviv.kreatech.stopwatch">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StopwatchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HistoryActivity"
            android:label="@string/history_time"
            android:parentActivityName=".StopwatchActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ua.lviv.kreatech.stopwatch.StopwatchActivity" />
            ></activity>
    </application>

</manifest>